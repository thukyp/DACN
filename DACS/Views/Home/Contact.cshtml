        </div>
    </div>
    <div class="container-contact">
        <div class="contact-wrapper">

            <div class="contact-info col-lg-6">
                <h2>Thông tin liên hệ</h2>
                <p><strong>Địa chỉ:</strong> Chung cư tara</p>
                <p><strong>Điện thoại:</strong> 0337178338</p>
                <p><strong>Email:</strong> hoahaibakhongchin@gmail.com</p>
            </div>
            <div class="map col-lg-6">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3920.0228620243133!2d106.65046155452728!3d10.732719992999037!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752e421ba32545%3A0x8482217e407b119e!2zUE1KMytXRkgsIFBoxrDhu51uZyA2LCBRdeG6rW4gOCwgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1744707048987!5m2!1svi!2s" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script type="text/javascript" src="js/script.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const messagesContainer = document.getElementById("chat-messages-container");
            const messageInput = document.getElementById("chat-input");
            const sendButton = document.getElementById("chat-send-btn");
            const imageInput = document.getElementById("chat-image");
            const userName = "@(User.Identity?.Name ?? "Khách")".trim();
            const userRole = "@(User.IsInRole("Admin") ? "admin" : "user")";
            // ✅ Kết nối SignalR
            const connection = new signalR.HubConnectionBuilder()
                .withUrl("/Hubs/ChatHub")
                .build();

            connection.start()
                .then(() => console.log("✅ Kết nối SignalR thành công"))
                .catch(err => console.error(err.toString()));

            // 🟩 TẢI LỊCH SỬ CHAT
            async function loadMessages() {
                try {
                    const res = await fetch(`/Home/GetChatHistory?userId=${encodeURIComponent(userName)}`);
                    if (!res.ok) throw new Error("Không tải được lịch sử chat");
                    const data = await res.json();

                    messagesContainer.innerHTML = ""; // Xóa cũ
                    data.forEach(msg => {
                        const type = msg.senderId === userName ? "user" : "admin";
                        addMessageToBox(msg.message, type, msg.sentTime, msg.imageUrl);
                    });
                } catch (err) {
                    console.error("❌ Lỗi loadMessages:", err);
                }
            }

            // Gọi lần đầu khi load trang
            loadMessages();

            // 🕒 TỰ ĐỘNG KIỂM TRA CÓ TIN NHẮN MỚI KHÔNG
            let lastMessageCount = 0;
            setInterval(async () => {
                try {
                    const res = await fetch(`/Home/GetChatHistory?userId=${encodeURIComponent(userName)}`);
                    const data = await res.json();

                    if (data.length !== lastMessageCount) {
                        lastMessageCount = data.length;
                        messagesContainer.innerHTML = "";
                        data.forEach(msg => {
                            const type = msg.senderId === userName ? "user" : "admin";
                            addMessageToBox(msg.message, type, msg.sentTime, msg.imageUrl);
                        });
                    }
                } catch (e) {
                    console.warn("Không thể auto reload:", e);
                }
            }, 2000); // 👉 2 giây cập nhật 1 lần

            // ===============================
            // 🟩 GỬI TIN NHẮN (CÓ HÌNH)
            // ===============================
            async function sendMessage() {
                const message = messageInput.value.trim();
                const file = imageInput.files[0];
                let imageUrl = null;
                 if(userRole !== "user") return;
                // 🟨 Nếu có chọn ảnh thì upload ảnh trước
                if (file) {
                    const formData = new FormData();
                    formData.append("image", file);

                    const res = await fetch("/Home/UploadChatImage", {
                        method: "POST",
                        body: formData
                    });

                    if (res.ok) {
                        const data = await res.json();
                        imageUrl = data.url;
                    } else {
                        alert("❌ Không tải được hình ảnh!");
                        return;
                    }
                }

                if (!message && !imageUrl) return; // Không gửi trống

                // 🟩 Gửi qua SignalR (realtime)
                connection.invoke("SendMessageToAdmin", userName, message, imageUrl)
                    .catch(err => console.error(err.toString()));

                // 🟩 Gọi API lưu tin nhắn
                fetch("/Home/SaveMessage", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        senderId: userName,
                        receiverId: "Admin",
                        content: message,
                        imageUrl: imageUrl,

                    })
                });

                // 🟩 Hiển thị ngay ở giao diện người dùng
                addMessageToBox(message, "user", null, imageUrl);
                messageInput.value = "";
                imageInput.value = "";
            }

            // ===========================
            // 🟨 GỬI KHI NHẤN NÚT HOẶC ENTER
            // ===========================
            sendButton.addEventListener("click", sendMessage);
            messageInput.addEventListener("keypress", function (e) {
                if (e.key === "Enter" && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            });

            // ===========================
            // 🟩 HIỂN THỊ TIN NHẮN TRONG KHUNG
            // ===========================
            function addMessageToBox(message, type, sentTime = null, imageUrl = null) {
                const msgDiv = document.createElement("div");
                msgDiv.className = `chat-message ${type}`;

                // 🟨 Nếu có ảnh thì hiển thị ảnh
                if (imageUrl) {
                    const img = document.createElement("img");
                    img.src = imageUrl;
                    img.style.maxWidth = "200px";
                    img.style.borderRadius = "10px";
                    img.style.display = "block";
                    img.style.marginBottom = "5px";
                    msgDiv.appendChild(img);
                }

                if (message) {
                    const textDiv = document.createElement("div");
                    textDiv.textContent = message;
                    msgDiv.appendChild(textDiv);
                }

                // 🕒 Thời gian
                const timeDiv = document.createElement("div");
                let timeText = "";

                if (sentTime) {
                    const date = new Date(sentTime);
                    timeText = date.toLocaleString("vi-VN", {
                        hour: '2-digit',
                        minute: '2-digit',
                        day: '2-digit',
                        month: '2-digit',
                        year: 'numeric'
                    });
                } else {
                    const now = new Date();
                    timeText = now.toLocaleTimeString("vi-VN", { hour: '2-digit', minute: '2-digit' });
                }

                timeDiv.textContent = timeText;
                timeDiv.style.fontSize = "12px";
                timeDiv.style.color = "gray";
                timeDiv.style.marginTop = "2px";
                msgDiv.appendChild(timeDiv);

                messagesContainer.appendChild(msgDiv);
                messagesContainer.scrollTop = messagesContainer.scrollHeight;
            }

            // === Xử lý phóng to ảnh khi nhấn vào ===
            const imageModal = document.getElementById("image-modal");
            const modalImg = imageModal.querySelector("img");

            document.addEventListener("click", function (e) {
                if (e.target.tagName === "IMG" && e.target.closest(".chat-message")) {
                    modalImg.src = e.target.src;
                    imageModal.style.display = "flex";
                }
            });

            imageModal.addEventListener("click", function () {
                imageModal.style.display = "none";
            });
        });


    </script>


</body>
